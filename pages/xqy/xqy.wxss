/* pages/xqy/xqy.wxss */
page {
  height: 100%;
  width: 100%;
  /*页面滚动*/
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
}

.main {
  /*页面容器主样式*/
  word-break: break-all;
  /*自动换行*/
  height: 100%;
  width: 100%;
}

.xqy_tkh {
  /*题库号*/
  background-color: #FFE4E1;
}

.xqy_tx {
  /*题型*/
  background-color: #AFEEEE;
}

.xqy_ddl {
  /*答对量*/
  background-color: #FFE4E1;
}

.xqy_ztl {
  /*总题量*/
  background-color: #AFEEEE;
}

.xqy_dbcd {
  /*顶部菜单-总样式*/
  box-shadow: 0rpx 1rpx 7rpx 9rpx rgba(0, 0, 0, 0.5)
}

.xqy_dbcd_sec {
  /*顶部菜单-第二行*/
  position: relative;
}

.xqy_ipt {
  /*输入框*/
  position: absolute;
  left: 75%;
  width: 24%;
  height: 100%;
  background-color: rgba(232, 143, 143, 0.5);
}
.tmxs_1 {
  /*用于题目选项显示底部颜色*/
  background-color: #FFE4E1;
}

.tmxs_2 {
  /*用于题目选项显示底部颜色*/
  background-color: #AFEEEE;
}

/* 横着的分割View样式 */
/*分割线样式*/
.xqy_hr {
  background: rgb(87, 200, 213);
  width: 100%;
  height: 8rpx;
}

/*分割线样式2*/
.xqy_hr2 {
